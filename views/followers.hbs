<main>
    <div class="main-crud-container">
        <div class="data-container">
            <h1>Followers Dashboard</h1>
            <p><span class='data-value'>{{numPosts}}</span> Followers in Database.</p>
            {{#each errors}}
            <p class="error-msg">{{this}}</p>
            {{/each}}
        </div>
        <div class="crud-container">
            <div class="block-container">
                <div>
                    <form>
                        <h4>Search Followers</h4>
                        <input style="display: none;" name="qt" value="search">
                        <div class="label-group">
                            <label>Username</label>
                            <input name="usr" type="text" placeholder="@beyonce">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Search">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Create Follower</h4>
                        <input style="display: none;" name="qt" value="create">
                        <div class="label-group">
                            <label>username</label>
                            <input name="username" type="text" id="follower-username" placeholder="@beyonce">
                        </div>
                        <div class="label-group">
                            <label>follower account</label>
                            <input name="follower_account" type="text" id="follower-follower_account" placeholder="@jayz">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Create">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Delete Follower</h4>
                        <input style="display: none;" name="qt" value="delete">
                        <div class="label-group">
                            <label>username</label>
                            <input name="username" type="text" placeholder="@beyonce">
                        </div>
                        <div class="label-group">
                            <label>follower account to delete</label>
                            <input name="follower_account" type="text" placeholder="@jayz">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Delete">
                        </div>
                    </form>
                </div>
            </div>
            <div class="block-container">
                <h4>Viewing Window</h4>
                <div class="results-window">
                    <table id="results-window-table">
                        <tr>
                            <th>username</th>
                            <th>follower account</th>
                        </tr>
                        {{#each windowData}}
                        <tr>
                            <td>
                                {{this.username}}
                            </td>
                            <td>
                                {{this.follower_account}}
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>