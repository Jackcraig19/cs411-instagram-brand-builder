<main>
    <div class="main-crud-container">
        <div class="data-container">
            <h1>Follower/Following Count CRUD Dashboard</h1>
            <p><span class='data-value'>{{numPosts}}</span> dates in database.</p>
            {{#each errors}}
            <p class="error-msg">{{this}}</p>
            {{/each}}
        </div>
        <div class="crud-container">
            <div class="block-container">
                <div>
                    <form>
                        <h4>Search Follower/Following Count</h4>
                        <input style="display: none;" name="qt" value="search">
                        <div class="label-group">
                            <label>Username</label>
                            <input name="usr" type="text" placeholder="kimkardashian">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Search">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Create Follower/Following Count</h4>
                        <input style="display: none;" name="qt" value="create">
                        <div class="label-group">
                            <label>Username</label>
                            <input name="usr" type="text" id="dates-usr" placeholder="kimkarshashian">
                        </div>
                        <div class="label-group">
                            <label>Follower Count</label>
                            <input name="flr" type="text" id="dates-flr" placeholder="4">
                        </div>
                        <div class="label-group">
                            <label>Following Count</label>
                            <input name="fling" type="text" id="dates-fling" placeholder="3">
                        </div>
                        <div class="label-group">
                            <label>Date</label>
                            <input name="date" type="text" id="dates-date" placeholder="mm/dd/yyyy">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" id="create-submit" text="Create">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Update Follower/Following Count</h4>
                        <input style="display: none;" name="qt" value="update">
                        <div class="label-group">
                            <label>Username to Update</label>
                            <input name="usr" type="text" placeholder="huh">
                        </div>
                        <div class="label-group">
                            <label>Date to Update</label>
                            <input name="date" type="text" placeholder="mm/dd/yyyy">
                        </div>
                        <div class="label-group">
                            <label>New Follower Count</label>
                            <input name="flr" type="text" placeholder="4">
                        </div>
                        <div class="label-group">
                            <label>New Following_Count</label>
                            <input name="fling" type="text" placeholder="3">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Update">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Delete Follower/Following Count</h4>
                        <input style="display: none;" name="qt" value="delete">
                        <div class="label-group">
                            <label>Username To Delete</label>
                            <input name="usr" type="text" placeholder="hee">
                        </div>
                        <div class="label-group">
                            <label>Date To Delete</label>
                            <input name="date" type="text" placeholder="hee">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Delete">
                        </div>
                    </form>
                </div>
                 <div>
                    <form>
                        <h4>Get Highest Follower Count and Liked Post</h4>
                        <input style="display: none;" name="qt" value="advanced">
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit">
                        </div>
                    </form>
                </div>
            </div>
            <div class="block-container">
                <h4>Follower/Following Count</h4>
                <div class="results-window">
                    <table id="results-window-table">
                        <tr>
                            <th>Username</th>
                            <th>Follower_Count</th>
                            <th>Following_Count</th>
                            <th>Date</th>
                        </tr>
                        {{#each windowData}}
                        <tr>
                            <td>
                                {{this.Username}}
                            </td>
                            <td>
                                {{this.Follower_Count}}
                            </td>
                            <td>
                                {{this.Following_Count}}
                            </td>
                            <td>
                                {{this.Date}}
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            <div class="block-container">
                <h4>Highest Follower Count and Liked Post</h4>
                <div class="results-window">
                    <table id="results-window-table">
                        <tr>
                            <th>Username</th>
                            <th>Highest Follower Count</th>
                            <th>Highest Liked Post</th>
                        </tr>
                        {{#each windowData}}
                        <tr>
                            <td>
                                {{this.User}}
                            </td>
                            <td>
                                {{this.HFollower_Count}}
                            </td>
                            <td>
                                {{this.Highest_Liked_Post}}
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
