<main>
    <div class="main-crud-container">
        <div class="data-container">
            <h1>Hashtags CRUD Dashboard</h1>
            {{#each errors}}
            <p class="error-msg">{{this}}</p>
            {{/each}}
        </div>
        <div class="crud-container">
            <div class="block-container">
                <div>
                    <form>
                        <h4>Search Hashtag Keyword</h4>
                        <input style="display: none;" name="qt" value="search">
                        <div class="label-group">
                            <label>hashtag</label>
                            <input name="hashtag" type="text" placeholder="#love">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Search">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Create Hashtag</h4>
                        <input style="display: none;" name="qt" value="create">
                        <div class="label-group">
                            <label>hashtag</label>
                            <input name="hashtag" type="text" id="tag" placeholder="#love">
                        </div>
                        <div class="label-group">
                            <label>number of posts</label>
                            <input name="number_of_posts" type="text" id="num-posts" placeholder="5">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Update">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Update Hashtag</h4>
                        <input style="display: none;" name="qt" value="update">
                        <div class="label-group">
                            <label>hashtag</label>
                            <input name="hashtag" type="text" placeholder="#love">
                        </div>
                        <div class="label-group">
                            <label>number of posts</label>
                            <input name="number_of_posts" type="text" placeholder="5">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Update">
                        </div>
                    </form>
                </div>
                <div>
                    <form>
                        <h4>Delete Hashtag</h4>
                        <input style="display: none;" name="qt" value="delete">
                        <div class="label-group">
                            <label>Hashtag To Delete</label>
                            <input name="hashtag" type="text" placeholder="#love">
                        </div>
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit" text="Delete">
                        </div>
                    </form>
                </div>
                 <div>
                    <form>
                        <h4>Advanced Query</h4>
                        <input style="display: none;" name="qt" value="advanced">
                        <div class="label-group">
                            <label>Submit</label>
                            <input type="submit">
                        </div>
                    </form>
                </div>
            </div>
            <div class="block-container">
                <h4>Viewing Window</h4>
                <div class="results-window">
                    <table id="results-window-table">
                        <tr>
                            <th>hashtag</th>
                            <th>number of posts</th>
                            <th>a</th>
                        </tr>
                        {{#each windowData}}
                        <tr>
                            <td>
                                {{this.url}}
                            </td>
                            <td>
                                {{this.number_of_posts}}
                            </td>
                            <td>
                                {{this.a}}
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>